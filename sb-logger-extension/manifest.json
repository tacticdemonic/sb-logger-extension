{
  "manifest_version": 2,
  "name": "SB Logger - Save Bets",
  "version": "1.0.0",
  "description": "Injects a 'Save Bet' button to record bets (amount, page, selection). View and export saved bets.",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "alarms",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "SB Logger",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["apiService.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
