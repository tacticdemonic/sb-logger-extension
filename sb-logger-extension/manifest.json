{
  "manifest_version": 3,
  "name": "SB Logger - Save Bets",
  "version": "1.0.26",
  "description": "Track and analyze value bets from surebet.com. Save bets with one click, auto-check results, view P/L charts, and export data.",
  "author": "SB Logger Team",
  "homepage_url": "https://github.com/tacticdemonic/sb-logger-extension",
  "browser_specific_settings": {
    "gecko": {
      "id": "sb-logger@tacticdemonic.github.io",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "SB Logger",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}